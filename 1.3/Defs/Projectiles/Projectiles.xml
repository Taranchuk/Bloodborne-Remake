  <!-- Bloodborne Parasite-->

  <ThingDef ParentName="BaseProjectileNeolithic">
    <defName>BloodborneRemake_Parasite</defName>
    <label>parasite</label>
    <graphicData>
      <texPath>Projectiles/BloodborneRemake_Parasite</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <flyOverhead>true</flyOverhead>
      <damageDef>BloodborneRemake_ParasiteHit</damageDef>
      <damageAmountBase>1</damageAmountBase>
      <stoppingPower>10.0</stoppingPower>
      <speed>25</speed>
      <shadowSize>0.4</shadowSize>
    </projectile>
  </ThingDef>

  <DamageDef>
    <defName>BloodborneRemake_ParasiteHit</defName>
    <label>parasite hit</label>
    <workerClass>DamageWorker_AddInjury</workerClass>
    <externalViolence>true</externalViolence>
    <makesBlood>false</makesBlood>
    <canInterruptJobs>false</canInterruptJobs>
    <deathMessage>{0} has been killed by a parasite.</deathMessage>
    <hediff>Scratch</hediff>
    <hediffSolid>Crack</hediffSolid>
    <harmAllLayersUntilOutside>true</harmAllLayersUntilOutside>
    <impactSoundType>Slice</impactSoundType>
    <armorCategory>Sharp</armorCategory>
    <overkillPctToDestroyPart>0~0.7</overkillPctToDestroyPart>
    <isRanged>true</isRanged>
    <makesAnimalsFlee>true</makesAnimalsFlee>
    <additionalHediffs>
      <li>
        <hediff>BloodborneRemake_KosParasite_Infection</hediff>
        <severityPerDamageDealt>1</severityPerDamageDealt>
      </li>
    </additionalHediffs>
  </DamageDef>

  <!-- Bloodborne Flame --> <!-- Need VEF Projectile -->

  <VFECore.ExpandableProjectileDef ParentName="BaseBullet">
    <defName>BloodborneRemake_Flame</defName>
    <label>fire</label>
    <thingClass>VFECore.FlamethrowProjectile</thingClass>
    <graphicData>
      <texPath>Projectiles/BloodborneRemake_Flame</texPath>
      <texPathFadeOut>Projectiles/BloodborneRemake_FlameFadeOut</texPathFadeOut>
      <shaderType>MoteGlow</shaderType>
    </graphicData>
    <drawOffscreen>true</drawOffscreen>
    <lifeTimeDuration>60</lifeTimeDuration>
    <widthScaleFactor>0.85</widthScaleFactor>
    <heightScaleFactor>1</heightScaleFactor>
    <startingPositionOffset>(0, 0, -1)</startingPositionOffset>
    <totalSizeScale>0.75</totalSizeScale>
    <tickFrameRate>5</tickFrameRate>
    <finalTickFrameRate>5</finalTickFrameRate>
    <tickDamageRate>20</tickDamageRate>
    <dealsDamageOnce>true</dealsDamageOnce>
    <minDistanceToAffect>3</minDistanceToAffect>
    <projectile>
      <damageDef>Flame</damageDef>    
      <flyOverhead>false</flyOverhead>
      <damageAmountBase>18</damageAmountBase>
      <stoppingPower>4.5</stoppingPower>    
      <ai_IsIncendiary>true</ai_IsIncendiary>
      <speed>16</speed>
    </projectile>
  </VFECore.ExpandableProjectileDef>

