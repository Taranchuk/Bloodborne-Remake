<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Test weapon-->

  <ThingDef ParentName="BloodborneRemake_BaseMelee">
    <defName>BloodborneRemake_Test</defName> 
    <label>(a)test</label>
    <description>.</description>
    <graphicData>
      <texPath>Things/TrickWeapons/Chikage_Sheath</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <soundInteract>BloodborneRemake_Sound_BloodSlash</soundInteract>
    <statBases>
      <AccuracyTouch>0.85</AccuracyTouch>
      <AccuracyShort>0.95</AccuracyShort>
      <AccuracyMedium>0.80</AccuracyMedium>
      <AccuracyLong>0.75</AccuracyLong>
      <RangedWeapon_Cooldown>0.20</RangedWeapon_Cooldown>
    </statBases>
    <comps>
      <li Class="MVCF.Comps.CompProperties_VerbProps">
        <compClass>MVCF.Comps.Comp_VerbProps</compClass>
        <ConsiderMelee>true</ConsiderMelee>
        <verbProps>
          <li>
            <label>bloodwave</label>
            <canBeToggled>true</canBeToggled>
          </li>
        </verbProps>
      </li>
    </comps>
    <verbs>
      <li>
        <label>bloodwave</label>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>BloodborneRemake_Bloodwave</defaultProjectile>
        <warmupTime>0.35</warmupTime>
        <range>23.9</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>BloodborneRemake_Sound_BloodSlash</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <tools>
      <!-- Normal Attack -->
      <li>
        <label>normal handle</label>
        <capacities>
          <li>BloodborneRemake_Tool_AreaTest</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.1</cooldownTime>
      </li>
      <li>
        <label>normal point</label>
        <capacities>
          <li>BloodborneRemake_Tool_AreaTest</li>
        </capacities>
        <power>15</power>
        <cooldownTime>1.1</cooldownTime>
      </li>
      <li>
        <label>normal edge</label>
        <capacities>
          <li>BloodborneRemake_Tool_AreaTest</li>
        </capacities>
        <power>16</power>
        <cooldownTime>1.2</cooldownTime>
      </li>
      <!-- Transformation Attack  -->
      <li>
        <label>blood handle</label>
        <capacities>
          <li>BloodborneRemake_Tool_AreaTest</li>
        </capacities>
        <power>12</power>
        <cooldownTime>1.1</cooldownTime>
        <extraMeleeDamages>
          <li>
            <def>BloodborneRemake_Blood</def>
            <amount>8</amount>
          </li>
        </extraMeleeDamages>
      </li>
      <li>
        <label>blood point</label>
        <capacities>
          <li>BloodborneRemake_Tool_AreaTest</li>
        </capacities>
        <power>17</power>
        <cooldownTime>1.3</cooldownTime>
        <extraMeleeDamages>
          <li>
            <def>BloodborneRemake_Blood</def>
            <amount>8</amount>
          </li>
        </extraMeleeDamages>
      </li>
      <li>
        <label>blood edge</label>
        <capacities>
          <li>BloodborneRemake_Tool_AreaTest</li>
        </capacities>
        <power>19</power>
        <cooldownTime>1.5</cooldownTime>
        <extraMeleeDamages>
          <li>
            <def>BloodborneRemake_Blood</def>
            <amount>8</amount>
          </li>
        </extraMeleeDamages>
      </li>
    </tools>
    <modExtensions>
      <li Class="Bloodborne_Remake.DefModExtension_AOEMelee">
        <range>4</range>
        <chance>1.0</chance>
        <effecter_Normal>BloodborneRemake_Effecter_HitFlesh</effecter_Normal>
        <effecter_Mechanoid>Damage_HitMechanoid</effecter_Mechanoid>
      </li>
      <li Class="Bloodborne_Remake.DefModExtension_WeaponMod">
        <modes>
          <li>
            <labels>
              <li>RANGE</li>
            </labels>
            <graphicData>
              <texPath>Things/TrickWeapons/Chikage_Sheath</texPath>
              <graphicClass>Graphic_Single</graphicClass>
              <shaderType>CutoutComplex</shaderType>
            </graphicData>
            <effecter>BloodborneRemake_Effecter_TransformF_Add</effecter>
            <sound>BloodborneRemake_Sound_BloodExtract</sound>
          </li>
          <li>
            <labels>
              <li>normal handle</li>
              <li>normal point</li>
              <li>normal edge</li>
            </labels>
            <graphicData>
              <texPath>Things/TrickWeapons/Chikage</texPath>
              <graphicClass>Graphic_Single</graphicClass>
              <shaderType>CutoutComplex</shaderType>
            </graphicData>
            <effecter>BloodborneRemake_Effecter_TransformF_Remove</effecter>
            <sound>BloodborneRemake_Sound_BloodLight</sound>
          </li>
          <li>
            <labels>
              <li>blood handle</li>
              <li>blood point</li>
              <li>blood edge</li>
            </labels>
            <graphicData>
              <texPath>Things/TrickWeapons/Chikage_Transformed</texPath>
              <graphicClass>Graphic_Single</graphicClass>
              <shaderType>CutoutComplex</shaderType>
            </graphicData>
            <effecter>BloodborneRemake_Effecter_TransformF_Add</effecter>
            <sound>BloodborneRemake_Sound_BloodSlash</sound>
          </li>
        </modes>
      </li>
    </modExtensions>
  </ThingDef>
  

</Defs>